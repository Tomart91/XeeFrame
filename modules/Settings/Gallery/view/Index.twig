<div class="col-xs-12">
	<legend>
		Galeria 
		<button class="btn btn-success btn-sm addImage">
			Dodaj
		</button>
	</legend>
</div>
<div class="col-xs-12">
	<table class="table table-bordered table-hover table-condensed">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nazwa</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for IMAGE in IMAGES%}
				<tr>
					<td>{{IMAGE['id']}}</td>
					<td>{{IMAGE['image']}}</td>
					<td>
						<button class="btn btn-sm btn-danger pull-right removeImage" data-id="{{IMAGE['id']}}"><span class="glyphicon glyphicon-trash"></span></button>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	
</div>